{
  "name": "@rubykgen/rubyk-cli",
  "version": "0.0.2",
  "description": "",
  "types": "build/types/types.d.ts",
  "bin": {
    "rubyk": "bin/rubyk"
  },
  "scripts": {
    "dev": "tsx src/main.ts",
    "lint": "eslint src/**/*.ts* --fix",
    "clean-build": "rimraf -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "copyfiles ./src/templates/* ./build/templates",
    "build": "yarn clean-build && yarn compile && yarn copy-templates",
    "prepublishOnly": "yarn build"
  },
  "files": [
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rubykgen/eslint-config": "*",
    "@rubykgen/ts-config": "*",
    "@types/node": "^20.11.5",
    "copyfiles": "^2.4.1",
    "husky": "^5.1.3",
    "pretty-quick": "^3.1.0",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "~4.5.0"
  },
  "dependencies": {
    "gluegun": "^5.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
